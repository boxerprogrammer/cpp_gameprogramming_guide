@startuml
skinparam classAttributeIconSize 0

'== シーン管理 ==
abstract class Scene
class TitleScene
class GamePlayScene
class PauseScene
class OptionScene
class GameOverScene
class StageClearScene
class ContinueScene
class SceneManager
class Application

Application -->SceneManager


Scene <|-- TitleScene
GamePlayScene --|> Scene
Scene <|-- PauseScene
Scene <|-- KeyConfigScene
Scene <|-- OptionScene
Scene <|-- GameOverScene
Scene <|-- StageClearScene
ContinueScene -|> Scene
Scene -> Input
SceneManager --> Scene : manager *

'== ゲームオブジェクト ==
abstract class Actor
class Player
class Enemy
class Boss
class Shot
class Bullet
class Laser
class Item

Actor <|-- Player
Actor <|-- Enemy
Enemy <|-- Boss
Enemy <|-- Minion 
Actor <|-- Shot
Actor <|-- Bullet
Actor <|-- Laser
Actor <|-- Item


Actor -> Collider : has

'== 当たり判定 ==
class Collider
class CollisionManager

CollisionManager --> Collider : checks *


'== UI ==
class UIManager
class ScoreDisplay
class LifeDisplay

UIManager --> ScoreDisplay
UIManager --> LifeDisplay

'== サウンド ==
class SoundManager
class SoundConfig

SoundManager --> SoundConfig : uses

'== リソース管理 ==
class ResourceManager
class EnemySpawner

EnemySpawner --> Enemy : spawns

'== 演出 ==
class EffectManager
class TransitionEffect

EffectManager --> TransitionEffect : uses


@enduml